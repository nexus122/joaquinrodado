---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Title from '../components/Title.astro';
import Reel from '../components/Reel.astro'
import json from '../../public/portfolio.json';
---

<Layout title="Portfolio">
    <!-- quiero que me centre el titulo en el centro -->    
    <Title title="Portfolio"></Title>
    <Reel></Reel>
	<div class="cards grid lg:grid-cols-4 md:grid-cols-2">
        {json.map((project) => (
            <Card
              title={project.title}
              background={project.background}
              colSpan={project.colSpan || "1"}
              rowSpan={project.rowSpan || "1"}
            />
          ))}        
    </div>
</Layout>

